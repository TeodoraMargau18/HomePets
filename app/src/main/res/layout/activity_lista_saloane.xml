<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2DAED6">
    <RelativeLayout
        android:id="@+id/RLSaloaneleMele"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">
        <ImageView
        android:id="@+id/ivSaloane"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ivsaloane"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
            android:id="@+id/tvListaSaloane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSaloane"
            android:text="@string/saloane_nregistrate"
            android:textSize="40dp"
            android:textAlignment="center"
            android:fontFamily="@font/boogaloo"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
         />
        <ListView
            android:layout_marginTop="30dp"
            android:id="@+id/listViewSaloane"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/tvListaSaloane"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvListaSaloane">
        </ListView>

    </RelativeLayout>
    <Button
        android:id="@+id/btnProgramarileMele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/programarile_mele"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RLSaloaneleMele"/>
</androidx.constraintlayout.widget.ConstraintLayout>