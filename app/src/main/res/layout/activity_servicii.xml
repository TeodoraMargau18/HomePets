<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiciiActivity"
    android:background="#2DAED6"
    >

    <ExpandableListView
        android:id="@+id/expLvCategorieAnimalServicii"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="150dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTotalServicii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total : 0 lei"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/expLvCategorieAnimalServicii"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="200dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnComanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="comandaFunction"
        android:text="@string/finalizeaza_programarea"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalServicii" />


</androidx.constraintlayout.widget.ConstraintLayout>