<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgListaAnimale"
        android:src="@drawable/sysytest"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="5dp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_weight="66.6"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tvNumeAnimalListView"
           android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Sysy"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textSize="30dp"
            android:textColor="#0B4073"
            />
        <TextView
            android:id="@+id/tvGenVarsta"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="femela - 9 ani si o luna"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textSize="30dp"
            android:textColor="#377395"
            />
    </LinearLayout>

</LinearLayout>