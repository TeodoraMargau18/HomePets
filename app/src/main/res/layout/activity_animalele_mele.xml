<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animalute"
    tools:context=".AnimaleleMeleActivity">

    <TextView
        android:id="@+id/textViewAnimaleleMele"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2DAED6"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text="@string/animalutele_mele"

        android:textAlignment="center"
        android:textColor="#0B4073"
        android:textSize="40dp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="190dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnimaleleMele">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2DAED6"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAnimaleleMele">

            <ListView
                android:id="@+id/animalsListView"

                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginBottom="5dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>